@model List<Bloggie.web.Models.Domain.BlogPost>;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>List Of All Blogs</h1>
    </div>
</div>
<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>tags</th>
                    <th> </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var BlogPost in Model)
                {
                    <tr>
                        <td>@BlogPost.ID</td>
                        <td>@BlogPost.Heading</td>
                        <td>
                            <div class="dis-flex">
                                @foreach(var tag in BlogPost.Tags)
                                {
                                    <span class="badge bg-secondary ms-1">@tag.Name</span>
                                }
                            </div>
                        </td>
                        <td>
                            <a class="" asp-action="Edit"
                                asp-controller="AdminBlogPost"
                            asp-route-id="@BlogPost.ID">Edit</a>
                        </td>
                        

                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No tags found!</p>
    }
</div>